import string

password = input("Enter a password:")
score = 0

#length check
if len(password) >= 8:
    score += 1 

#lowercase check
if any(c.islower() for c in password):
    score += 1 
    
# uppercase check
if any(c.isupper() for c in password):
    score += 1 

# number check
if any(c.isdigit()for c in password):
    score += 1 
    
# symbol check
if any(c in string.punctuation for c in password):
    score += 1 
    
# strength result
if score <= 2:
    strength = "weak"
elif score <= 4:
    strength = "medium"
else:
    strength = "strong"
    
print("password strength:", strength)
